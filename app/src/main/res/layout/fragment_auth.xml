<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AuthFragment">
    <View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="-45dp"
        android:layout_marginTop="-60dp"
        android:background="@drawable/left_circle"
        />
    <View
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="247dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/small_circle"
        />
    <ImageView
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        />
    <View
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="-97dp"
        android:layout_marginEnd="-30dp"
        android:layout_gravity="right"
        android:background="@drawable/small_circle2"
        />
    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="29dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/small_circle3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Войдите"
            android:textColor="#505050"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/loginEditText"
            android:layout_width="335dp"
            android:layout_height="50dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/edittext_bg"
            android:hint="Логин"
            android:paddingLeft="21sp" />

        <EditText
            android:id="@+id/passEditText"
            android:layout_width="335dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edittext_bg"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:paddingLeft="21sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/authBtn"
            android:layout_width="335dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_lime"
            android:text="Авторизоваться"
            android:textColor="#FFF"
            android:layout_marginTop="25dp"
            />
    </LinearLayout>
</LinearLayout>